{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "base_url": {
            "type": "string",
            "format": "uri"
        },
        "custom": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the wallpaper"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the wallpaper"
                    },
                    "url": {
                        "type": "string",
                        "description": "Download link of the wallpaper"
                    },
                    "preview": {
                        "type": "string",
                        "description": "Preview link of the wallpaper"
                    },
                    "preview_device": {
                        "type": "integer",
                        "enum": [1, 2, 3, 4],
                        "description": "The device where the preview was recorded on: 1 for iPhone, 2 for iPad, 3 for iPhone (images), 4 for iPad (images/collections)"
                    },
                    "authors": {
                        "type": "string",
                        "description": "Authors who created the wallpaper"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "bundle",
                                "video",
                                "animated",
                                "replacesWallpapers",
                                "addsToGallery",
                                "appearanceAware",
                                "iPhone",
                                "iPad"
                            ]
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "name",
                    "url",
                    "preview",
                    "preview_device",
                    "authors",
                    "tags"
                ]
            }
        },
        "default": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the wallpaper"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the wallpaper"
                    },
                    "url": {
                        "type": "string",
                        "description": "Download link of the wallpaper"
                    },
                    "preview": {
                        "type": "string",
                        "description": "Preview link of the wallpaper"
                    },
                    "preview_device": {
                        "type": "integer",
                        "enum": [1, 2, 3, 4],
                        "description": "The device where the preview was recorded on: 1 for iPhone, 2 for iPad, 3 for iPhone (images), 4 for iPad (images/collections)"
                    },
                    "authors": {
                        "type": "string",
                        "description": "Authors who created the wallpaper"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "bundle",
                                "video",
                                "animated",
                                "replacesWallpapers",
                                "addsToGallery",
                                "appearanceAware",
                                "iPhone",
                                "iPad"
                            ]
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "name",
                    "url",
                    "preview",
                    "preview_device"
                ]
            }
        }
    },
    "required": [
        "base_url",
        "custom",
        "default"
    ]
}
